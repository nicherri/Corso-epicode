@model IEnumerable<Hotel.Models.Prenotazione>

@{
    ViewData["Title"] = "Lista Prenotazioni";
}

<h2 class="d-inline-block">@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary float-right">Aggiungi Prenotazione</a>

<div class="mt-3 mb-3">
    <input type="text" id="searchCodiceFiscale" class="form-control" placeholder="Ricerca per Codice Fiscale" />
    <select id="filterTipologia" class="form-control mt-2">
        <option value="">Tutte le tipologie</option>
        <option value="pensione completa">Pensione Completa</option>
        <option value="mezza pensione">Mezza Pensione</option>
        <option value="solo pernottamento">Solo Pernottamento</option>
        <option value="pernottamento e colazione">Pernottamento e Colazione</option>
    </select>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Camera</th>
            <th>Data Prenotazione</th>
            <th>Numero Progressivo</th>
            <th>Anno</th>
            <th>Periodo</th>
            <th>Caparra</th>
            <th>Tariffa</th>
            <th>Dettagli Soggiorno</th>
            <th>Immagine Cover</th>
            <th>Tipologia Camera</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="prenotazioniTableBody">
        @foreach (var prenotazione in Model.OrderByDescending(p => p.DataPrenotazione))
        {
            <tr>
                <td>@prenotazione.Cliente.Nome @prenotazione.Cliente.Cognome</td>
                <td>@prenotazione.Camera.Id</td>
                <td>@prenotazione.DataPrenotazione.ToShortDateString()</td>
                <td>@prenotazione.NumeroProgressivo</td>
                <td>@prenotazione.Anno</td>
                <td>@prenotazione.Dal.ToShortDateString() - @prenotazione.Al.ToShortDateString()</td>
                <td>@prenotazione.CaparraConfirmatoria</td>
                <td>@prenotazione.PrezzoTariffa</td>
                <td>@prenotazione.DettagliSoggiorno.Nome</td>
                <td><img src="@prenotazione.ImmagineCover" alt="Cover" style="width: 100px; height: 100px;" /></td>
                <td>@prenotazione.TipologiaCamera.Nome</td>
                <td>
                    <a asp-action="Details" asp-route-id="@prenotazione.Id" class="btn btn-info"><i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@prenotazione.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete('@prenotazione.Id')"><i class="bi bi-trash3-fill"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(id) {
        if (confirm('Sei sicuro di voler eliminare questa prenotazione?')) {
            $.ajax({
                url: '@Url.Action("DeleteConfirmed", "Prenotazione")',
                type: 'POST',
                data: { id: id },
                success: function (result) {
                    location.reload();
                }
            });
        }
    }

    $(document).ready(function () {
        $('#searchCodiceFiscale').on('input', function () {
            var searchValue = $(this).val().toLowerCase();
            $('#prenotazioniTableBody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(searchValue) > -1);
            });
        });

        $('#filterTipologia').change(function () {
            var filterValue = $(this).val().toLowerCase();
            $('#prenotazioniTableBody tr').filter(function () {
                $(this).toggle(filterValue === "" || $(this).text().toLowerCase().indexOf(filterValue) > -1);
            });
        });
    });
</script>
