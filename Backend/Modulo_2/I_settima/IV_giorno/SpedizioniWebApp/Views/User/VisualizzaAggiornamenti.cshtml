@model IEnumerable<SpedizioniWebApp.Models.AggiornamentoSpedizione>

@{
    ViewData["Title"] = "Aggiornamenti Spedizione";
}

<h2>Aggiornamenti Spedizione</h2>

<table class="table">
    <thead>
        <tr>
            <th>Data e Ora</th>
            <th>Stato</th>
            <th>Luogo</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aggiornamento in Model)
        {
            <tr>
                <td>@aggiornamento.DataOra</td>
                <td>@aggiornamento.Stato</td>
                <td>@aggiornamento.Luogo</td>
                <td>@aggiornamento.Descrizione</td>
            </tr>
        }
    </tbody>
</table>
