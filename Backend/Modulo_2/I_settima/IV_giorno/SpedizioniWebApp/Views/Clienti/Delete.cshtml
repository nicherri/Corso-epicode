@model SpedizioniWebApp.Models.Cliente

@{
    ViewData["Title"] = "Elimina Cliente";
}

<h2>Elimina Cliente</h2>

<h3>Sei sicuro di voler eliminare questo cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Cognome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cognome)
        </dd>
        <dt class="col-sm-2">
            Codice Fiscale
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodiceFiscale)
        </dd>
        <dt class="col-sm-2">
            Partita IVA
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PartitaIVA)
        </dd>
        <dt class="col-sm-2">
            Tipo Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCliente)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Elimina</button>
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
