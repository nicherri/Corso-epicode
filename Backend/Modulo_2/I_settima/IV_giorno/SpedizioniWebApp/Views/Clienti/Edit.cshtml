@model SpedizioniWebApp.Models.Cliente

@{
    ViewData["Title"] = "Modifica Cliente";
}

<h2>Modifica Cliente</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CodiceFiscale"></label>
        <input asp-for="CodiceFiscale" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PartitaIVA"></label>
        <input asp-for="PartitaIVA" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TipoCliente"></label>
        <select asp-for="TipoCliente" class="form-control">
            <option value="Privato">Privato</option>
            <option value="Azienda">Azienda</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>
